<div class="form-horizontal">
    <fieldset>
        <legend>Share New Fortune Cookie</legend>
        <div class="form-group">
            <label for="input-cookie-category" class="col-lg-2 control-label">Category</label>

            <div class="col-md-3">
                <input type="text" class="form-control" id="input-cookie-category" placeholder="Category">
            </div>
        </div>
        <div class="form-group">
            <label for="input-cookie-text" class="col-lg-2 control-label">Text</label>

            <div class="col-md-3">
                <input type="text" class="form-control" id="input-cookie-text" placeholder="Text">
            </div>
        </div>
        <div class="form-group">
            <label for="input-cookie-img" class="col-lg-2 control-label">Image</label>

            <div class="col-md-3">
                <input type="text" class="form-control" id="input-cookie-img" placeholder="Image url">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button class="btn btn-success" id="btn-add-cookie">Share</button>
            </div>
        </div>
    </fieldset>
</div>